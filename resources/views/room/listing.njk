{% extends '../master' %}

{% block content %}
<div class="container">
  <div class="row">
      <div class="col-md-12">

        <h2>Rooms Listing</h2>

        {% if rooms.length > 0 %}

          <table class="table table-bordered">
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Actions</th>
            </tr>
            {% for room in rooms %}
            <tr>
              <td>{{ room.id }}</td>
              <td>{{ room.name }}</td>
              <td>
                <a href="/rooms/{{ room.id }}/edit" class="btn btn-default" aria-label="Left Align">
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <a href="/rooms/{{ room.id }}" class="btn btn-default js-delete" aria-label="Left Align">
                  <span class="glyphicon glyphicon-erase" aria-hidden="true"></span>
                </a>
              </td>
            </tr>
            {% endfor %}
          </table>

        {% else %}

          <div class="alert alert-info" role="alert">
              No Rooms Yet
          </div>

        {% endif %}

        <a href="/rooms/create" class="btn btn-default" aria-label="Left Align">
          <span class="glyphicon glyphicon-plus" aria-hidden="true"> Add Room</span>
        </a>
      </div>
  </div>
</div>

{% endblock %}
